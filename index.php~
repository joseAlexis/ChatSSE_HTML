	<?php 
		
		$nombreArchivo = "chat.txt";
		
		if(isset($_GET['comentario'])) {
			if(isset($_POST['txtUsuario'])) {
				$usuario = $_POST['txtUsuario'];				
				
				if($usuario == "")
				{	
					echo "<label class='mensajeError'>Error! Debe escribir un nickname...</label>";
				}
				else {
					if(isset($_GET['ubicacion'])) {
						$ubicacion = $_GET['ubicacion'];
						
						$ubicacion = "(<a href='index.php'>".$ubicacion."</a>)";
						
						$usuario = "<b>".$usuario."</b>";
						
						$contenido = $_GET['comentario'];				
										
						$contenido .= $ubicacion;
						$contenido .= "<br>";
						
						$contenido .= "/**fin**/";
						
						$gestor = fopen($nombreArchivo, "a") or die ("Problemas en la creacion"); 
			
						fwrite($gestor, $usuario.": ".$contenido);
					
						echo "<label class='mensajeEnviado'>Mensaje Enviado!...</label>";
			
						fclose($gestor);
					}
					else {
						echo "<label class='mensajeError'>No se encontro su ubicacion, favor volverlo a intentar</label>";
					}
				}
			}
		}
	?>
	
