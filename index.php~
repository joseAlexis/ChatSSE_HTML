<?php
	if(isset($_GET['comentario'])) {
		$contenido = $_GET['comentario'];
		
		if($contenido == "Me gusta el rojo") {
			echo '<body id="body" style="background-color:red">';
		}
	}
	else {
		echo '<body id="body">'; 	
	}
?>
<body id="body">
	<br>
	<br>
	<br>
	<input type="color" onclick="">
	<div class="textoMostrar" id="txtChat"></div>
	
	<form method="POST" action="index.php" id="frmChat">
		<div class="areaUsuario">
		<label>Nickname: </label>
		<?php
			if(isset($_POST['txtUsuario'])) {
				$usuario = $_POST['txtUsuario'];
				
				if($usuario == "") {
					echo "<input type='text' name='txtUsuario'>";			
				}
				else {
					echo "<input type='text' name='txtUsuario' value='$usuario'>";
				}
			}
			else {
				echo "<input type='text' name='txtUsuario'>";			
			}
		?>
		</div>
		
		<br>
		<br>
		
		<div class="areaMensaje">
		<label>Mensaje: </label>
		<input type="text" id="txtTexto" class="textoEnviar" name="texto">
				
